
@{
    ViewBag.Title = "ProductInfo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="fa" dir="rtl">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>جزئیات محصول</title>
    <link rel="stylesheet" href="@Url.Content("~/Content/Styles/bootstrap-5.3.3-dist/css/bootstrap.min.css")">
    <link rel="stylesheet" href="@Url.Content("~/Content/Styles/font-awesome/css/all.min.css")">
    <link rel="stylesheet" href="@Url.Content("~/Content/Styles/StyleproductDetails.css")">
</head>

<body>

    <div class="container my-5">
        <div class="row g-4">

            <div class="col-lg-3 col-md-4 order-md-1">
                <div class="price-info-card card p-4">
                    <div class="d-flex justify-content-between mb-3 icon-row">
                        <div class="icon-item text-center">
                            <span class="icon-circle"><i class="fa fa-certificate"></i></span>
                            <p class="icon-text mt-2">تضمین کیفیت</p>
                        </div>
                        <div class="icon-item text-center">
                            <span class="icon-circle"><i class="fa fa-award"></i></span>
                            <p class="icon-text mt-2">اصالت کالا</p>
                        </div>
                        <div class="icon-item text-center">
                            <span class="icon-circle"><i class="fa fa-truck"></i></span>
                            <p class="icon-text mt-2">ارسال رایگان</p>
                        </div>
                    </div>

                    <ul class="list-unstyled delivery-list">
                        <li>
                            <i class="fa fa-certificate me-2 text-success"></i>
                            <span>تضمین کیفیت</span>
                            <p class="text-muted small">بررسی و کنترل نهایی توسط دکتر داروساز</p>
                        </li>
                        <li>
                            <i class="fa fa-award me-2 text-success"></i>
                            <span>اصالت کالا</span>
                            <p class="text-muted small">دارای مجوز رسمی از سازمان غذا و دارو</p>
                        </li>
                        <li>
                            <i class="fa fa-truck me-2 text-success"></i>
                            <span>ارسال رایگان</span>
                            <p class="text-muted small">ارسال رایگان سفارشات بالای ۹۰۰ هزار تومان</p>
                        </li>
                        <li>
                            <i class="fa fa-truck-ramp-box me-2 text-success"></i>
                            <span>هزینه ارسال به سراسر کشور</span>
                            <p class="text-muted small"> ۴۰ هزار تومان</p>
                        </li>
                    </ul>

                    <hr>

                    <p class="text-muted price-label">قیمت مصرف کننده:</p>
                    <div class="d-flex align-items-center mb-3">
                        <span class="old-price" id="price">۳,۴۰۰,۰۰۰</span>
                        <span class="discount-badge" id="discount">۸٪ تخفیف</span>
                    </div>
                    <span class="final-price" id="price">۳,۳۱۲,۰۰۰ تومان</span>

                    <button class="add-to-cart-btn-large mt-4">افزودن به سبد خرید</button>
                </div>
            </div>

            <div class="col-lg-9 col-md-8 order-md-2">
                <div class="product-detail-card card p-4">
                    <div class="row" id="card">
                        <div class="col-lg-5 col-md-6 d-flex flex-column align-items-center">
                            <div class="main-image-wrapper">
                                <img id="main-product-image"
                                     src="@Url.Content("~/Content/Styles/Image/Kalleh-Pro-Whey-Protein-Powder-removebg-preview.png")"
                                     alt="تصویر اصلی محصول" class="img-fluid" id="mainImage">
                            </div>
                            <div class="thumbnail-gallery d-flex justify-content-center mt-3">
                                <div class="thumbnail active" data-image="~/Images/whey-protein-large.jpg">
                                    <img src="@Url.Content("~/Content/Styles/Image/Kalleh-Pro-Whey-Protein-Powder-1800-g-removebg-preview.png")"
                                         alt="thumbnail 1" class="img-fluid" id="SecondImage">
                                </div>
                                <div class="thumbnail" data-image="~/Images/whey-protein-thumbnail2.jpg">
                                    <img src="@Url.Content("~/Content/Styles/Image/1501420601202343021-removebg-preview.png")" alt="thumbnail 2"
                                         class="img-fluid" id="thirdImage">
                                </div>
                                <div class="thumbnail" data-image="~/Images/whey-protein-thumbnail3.jpg">
                                    <img src="@Url.Content("~/Content/Styles/Image/pimages-removebg-preview.png")" alt="thumbnail 3"
                                         class="img-fluid" id="forthImage">
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-7 col-md-6 product-info-wrapper">
                            <div class="product-title-section mb-3">
                                <div class="d-flex justify-content-between align-items-start">
                                    <h1 class="main-title" id="Title"></h1>
                                    <span class="favorite-icon"><i class="far fa-heart"></i></span>
                                </div>
                                <h2 class="sub-title"id="code"></h2>
                                <p class="brand-name" id="category"></p>
                            </div>

                            <div class="rating-section d-flex align-items-center mb-3">
                                <div class="stars">
                                    <i class="fa fa-star text-warning"></i>
                                    <i class="fa fa-star text-warning"></i>
                                    <i class="fa fa-star text-warning"></i>
                                    <i class="fa fa-star text-warning"></i>
                                    <i class="far fa-star text-warning"></i>
                                </div>
                                <span class="rating-count me-2 px-1" id="rate">۴.۵</span>
                                <span class="comments-link px-2" id="review">۲۰۰ پرسش و پاسخ</span>
                            </div>

                            <hr class="my-3">

                            <div class="delivery-section mb-3">
                                <div class="d-flex align-items-center text-success">
                                    <i class="fa fa-truck me-2"></i>
                                    <span>ارسال رایگان</span>
                                </div>
                                <p class="text-muted mt-2" id="expire">تاریخ انقضا: بیش از ۱ سال</p>
                            </div>

                            <div class="options-section mb-4">
                                <div class="d-flex align-items-center mb-3">
                                    <span class="option-label"></span>
                                  
                                </div>
                                <div class="d-flex align-items-center mb-3">
          
                                </div>
                            </div>

                            <div class="about-product-section">
                                <h3 class="section-title">درباره محصول:</h3>

                                <ul class="product-description-list">
                                    <li id="discription"></li>
                                   
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>

    <script src="@Url.Content("~/Content/Styles/js/jquery.min.js")"></script>
    <script src="@Url.Content("~/Content/Styles/js/bootstrap.bundle.min.js")"></script>
    <script src="@Url.Content("~/Content/Styles/js/product-page-scripts.js")"></script>

    <script>
        $(document).ready(function () {
            $('.thumbnail').on('click', function () {
                // Remove 'active' class from all thumbnails
                $('.thumbnail').removeClass('active');

                // Add 'active' class to the clicked thumbnail
                $(this).addClass('active');

                // Get the new image source from the data-image attribute
                let newImageSrc = $(this).data('image');

                // Update the main image source
                $('#main-product-image').attr('src', newImageSrc);
            });
        });
    </script>
    <script>
    $(document).ready(function(){

    var productId = @Model.product.ProductID;

    $.ajax({
        url: '/Home/ViewProductInfo', 
        type: 'POST',
        data: { Id: productId },
        success: function(res){
            if(res.success){

                // پر کردن مقادیر داخل قالب
                $('#discription').text(res.data.);
                $('#productSubTitle').text(res.data.SubTitle ?? ''); // اگر زیرعنوان داری
                $('#productBrand').text(res.data.BrandName);
                $('#productPrice').text(res.data.Price + ' تومان');

                // توضیحات محصول (لیست)
                var descriptionHtml = '';
                res.data.DescriptionList.forEach(function(item){
                    descriptionHtml += `<li>${item}</li>`;
                });
                $('#productDescription').html(descriptionHtml);

            } else {
                alert(res.message);
            }
        },
        error: function(){
            alert('خطا در دریافت اطلاعات محصول');
        }
    });

});

    </script>
</body>

</html>
