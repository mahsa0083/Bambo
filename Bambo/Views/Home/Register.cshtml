@model Bambo.Models.ViewModel.UserViewModel
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_LayoutRegister.cshtml";
}

<div class="row align-items-center">
    <div class="col-lg-7 col-md-6">
        <div class="me-lg-5">
            <img src="~/Image/signup.svg" class="img-fluid d-block mx-auto" alt="">
        </div>
    </div>
    <div class="col-lg-5 col-md-6">
        @using (Html.BeginForm("NewRegister", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <div class="card shadow rounded border-0">
                <div class="card-body">
                    <h4 class="card-title text-center">ثبت نام</h4>
                    <form class="login-form mt-4">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">نام <span class="text-danger">*</span></label>
                                    <div class="form-icon position-relative">
                                        <i data-feather="user" class="fea icon-sm icons"></i>
                                        <input type="text" class="form-control ps-5" placeholder="نام" name="CurrentCustomer.Firstname" required="">
                                    </div>
                                </div>
                            </div><!--end col-->

                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">نام خانوادگی <span class="text-danger">*</span></label>
                                    <div class="form-icon position-relative">
                                        <i data-feather="user-check" class="fea icon-sm icons"></i>
                                        <input type="text" class="form-control ps-5" placeholder="نام خانوادگی" name="v.Lastname" required="">
                                    </div>
                                </div>
                            </div><!--end col-->

                            <div class="col-md-12">
                                <div class="mb-3">
                                    <label class="form-label">شماره تماس <span class="text-danger">*</span></label>
                                    <div class="form-icon position-relative">
                                        <i data-feather="phone" class="fea icon-sm icons"></i>
                                        <input type="text" class="form-control ps-5" placeholder="+989000000000" name="CurrentCustomer.Phone" required="">
                                    </div>
                                </div>
                            </div><!--end col-->

                            <div class="col-md-12">
                                <div class="mb-3">
                                    <label class="form-label">رمز عبور <span class="text-danger">*</span></label>
                                    <div class="form-icon position-relative">
                                        <i data-feather="key" class="fea icon-sm icons"></i>
                                        <input type="password" name="CurrentCustomer.PasswordHashed" class="form-control ps-5" placeholder="رمز عبور" required="">
                                    </div>
                                </div>
                            </div><!--end col-->
                            <div class="col-md-12">
                                <div class="mb-3">
                                    <label class="form-label">ایمیل <span class="text-danger">*</span></label>
                                    <div class="form-icon position-relative">
                                        <i data-feather="user-check" class="fea icon-sm icons"></i>
                                        <input type="email" name="CurrentCustomer.Email" class="form-control ps-5" placeholder="ایمیل" required="">
                                    </div>
                                </div>
                            </div><!--end col-->
                            <div class="col-md-8">
                                <div class="mb-3">
                                    <label class="form-label">تصویرنمایه کاربر</label>
                                    <div class="form-icon position-relative">
                                        <input type="file" name="CurrentCustomer.Image" class="form-control ps-2" placeholder="تصویرنمایه">
                                    </div>
                                </div>
                            </div><!--end col-->
                            <div class="col-md-12">
                                <div class="mb-3">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" name="Currentuser.IsAccepted" id="flexCheckDefault">
                                        <label class="form-check-label" for="flexCheckDefault">من با  <a href="" class="text-primary">قوانین و مقررات موافقم</a></label>
                                    </div>
                                </div>
                            </div><!--end col-->

                            <div class="col-md-12">
                                <div class="d-grid">
                                    <button class="btn btn-primary">ثبت نام</button>
                                </div>
                            </div><!--end col-->

                            

                            
                        </div><!--end row-->
                    </form>
                </div>
            </div>
        }

