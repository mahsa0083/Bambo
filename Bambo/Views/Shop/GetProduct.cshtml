@model Bambo.Areas.Admin.Data.ProductViewModel
@{
    ViewBag.Title = "GetProduct";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- slider Area Start-->
<div class="slider-area ">
    <!-- Mobile Menu -->
    <div class="single-slider slider-height2 d-flex align-items-center" data-background="@Url.Content("~/Content/assets/img/hero/category.jpg")">
        <div class="container">
            <div class="row">
                <div class="col-xl-12">
                    <div class="hero-cap text-center">
                        <h2>product Details</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- slider Area End-->
<!--================Single Product Area =================-->
<div class="product_image_area">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="product_img_slide owl-carousel">
                    @{
                        if (Model.product.Image != null)
                        {
                            var base64Image = Convert.ToBase64String(Model.product.Image);
                            var imageSrc = $"data:image/png;base64,{base64Image}";
                            <div class="single_product_img">
                                <img src="@imageSrc" alt="#" class="img-fluid">
                            </div>
                            <div class="single_product_img">
                                <img src="@imageSrc" alt=" #" class="img-fluid">
                            </div>
                            <div class="single_product_img">
                                <img src="@imageSrc" alt="#" class="img-fluid">
                            </div>
                        }

                        <div class="single_product_img">
                            <img src=" @Url.Content("~/Content/assets/img/product/single_product.png")" alt="#" class="img-fluid">
                        </div>
                        <div class="single_product_img">
                            <img src=" @Url.Content("~/Content/assets/img/product/single_product.png")" alt=" #" class="img-fluid">
                        </div>
                        <div class="single_product_img">
                            <img src="@Url.Content("~/Content/assets/img/product/single_product.png")" alt="#" class="img-fluid">
                        </div>
                    }
                </div>
            </div>
            <div class="col-lg-12 Product-Single-caption">
                <div class="col-lg-6">
                    <div class="single_product_text text-center">
                        <h3>
                          @Model.product.ProductName
                        </h3>

                        <div class="card_area">
                            <div class="product_count_area">
                                <p>Quantity</p>
                                <div class="product_count d-inline-block" style="border-radius: 5px;">

                                    <span class="product_count_item inumber-decrement"> <i class="ti-minus"></i></span>
                                    <input class="product_count_item input-number" type="text" value="1" min="0" max="10">
                                    <span class="product_count_item number-increment"> <i class="ti-plus"></i></span>
                                </div>

                            </div>
                            <p>@Model.product.Price</p>

                            <div class="add_to_cart">
                                <a href="#" class="btn_3">add to cart</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <p>
                        @Model.product.Discription
                    </p>
                </div>
            </div>

        </div>
    </div>
</div>
<!--================End Single Product Area =================-->
<!-- subscribe part here -->
<section class="subscribe_part section_padding">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="subscribe_part_content">
                    <h2>Get promotions & updates!</h2>
                    <p>Seamlessly empower fully researched growth strategies and interoperable internal or “organic” sources credibly innovate granular internal .</p>
                    <div class="subscribe_form">
                        <input type="email" placeholder="Enter your mail">
                        <a href="#" class="btn_1">Subscribe</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- subscribe part end -->
